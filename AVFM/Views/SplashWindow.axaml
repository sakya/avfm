<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AVFM.Views.SplashWindow"
        WindowStartupLocation="CenterScreen"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        SystemDecorations="None"
        ShowInTaskbar="False"
        CanResize="False"
        SizeToContent="WidthAndHeight">
    <Border CornerRadius="10" ClipToBounds="True"
            Background="#272728"
            BorderBrush="{DynamicResource SystemControlBackgroundBaseHighBrush}"
            BorderThickness="0.5"
            UseLayoutRounding="False"
            Padding="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image Grid.Row="0" Grid.Column="0" Name="ImageControl" Source="/Assets/icon.ico" Width="60" />

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" Margin="10,0,0,0">
                <TextBlock Name="TitleControl"  Text="AVFM" FontSize="18" />
                <TextBlock Name="CopyrightControl" FontWeight="Light" FontSize="12" />
            </StackPanel>

            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"
                       Name="MessageTextControl"
                       Text="..."/>
        </Grid>
    </Border>
</Window>
